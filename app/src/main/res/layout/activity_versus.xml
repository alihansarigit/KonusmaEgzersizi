<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activitys.VersusActivity">

    <include layout="@layout/mytoolbar"></include>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="horizontal"

                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="wrap_content"
                          android:id="@+id/lnr_team_a"
                          android:orientation="horizontal"
                          android:layout_marginLeft="10dp"
                          android:layout_marginTop="10dp"
                          android:layout_marginBottom="5dp"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_account_circle_blue_24dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="TEAM A : 0 | 0"
                          android:id="@+id/txt_team_a_score"
                          android:textSize="18dp"
                          android:textColor="@color/team_a"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_width="wrap_content"
                           android:rotation="-90"
                           android:id="@+id/img_selector_blue"
                           android:src="@drawable/ic_arrow_drop_left_selector_24dp"
                           android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginLeft="10dp"
                          android:id="@+id/lnr_team_b"
                          android:background="@android:color/white"
                          android:layout_height="wrap_content">
                <ImageView android:layout_width="wrap_content"
                           android:src="@drawable/ic_account_circle_red_24dp"
                           android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:text="TEAM B : 0 | 0"
                          android:textStyle="bold"
                          android:id="@+id/txt_team_b_score"
                          android:textColor="@color/team_b"
                          android:textSize="18dp"
                          android:layout_height="wrap_content"/>
                <ImageView android:layout_width="wrap_content"
                           android:rotation="-90"
                           android:id="@+id/img_selector_red"
                           android:src="@drawable/ic_arrow_drop_left_selector_red_24dp"
                           android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView android:layout_width="50dp"
              android:text="10"
              android:id="@+id/txt_timer"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_marginTop="50dp"
              android:textColor="@android:color/white"
              android:background="@drawable/circle_timer"
              android:layout_marginBottom="50dp"
              android:layout_height="wrap_content"/>


    <TextView android:layout_width="wrap_content"
              android:text="KARŞILAŞMAK"
              android:id="@+id/txtWords"
              android:gravity="center"

              android:layout_gravity="center"
              android:layout_marginBottom="50dp"
              android:textColor="@android:color/black"
              android:padding="10dp"
              android:textSize="22dp"
              android:background="@drawable/circleuc"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="PASS"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"

                      android:textColor="@android:color/white"
                      android:padding="10dp"
                      android:id="@+id/btnimg_pass"

                      android:background="@drawable/circle_pass"
                      android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="wrap_content"
                       android:textColor="@android:color/white"
                       android:text="PASS"
                       android:gravity="center"
                       android:layout_margin="10dp"
                       android:id="@+id/btnimg_granted"
                       android:src="@drawable/ic_check_white_24dp"
                       android:background="@drawable/circle_tick"
                       android:layout_height="wrap_content"/>

            <!--<TextView android:layout_width="wrap_content"-->
            <!--android:textColor="@android:color/white"-->
            <!--android:gravity="center"-->
            <!--android:text="0"-->
            <!--android:id="@+id/txt_correctCounter"-->
            <!--android:layout_gravity="center"-->
            <!--android:background="@drawable/circle_tick"-->
            <!--android:layout_height="30dp"/>-->
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/banner" />

</LinearLayout>