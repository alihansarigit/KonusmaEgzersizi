<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:background="@color/team_a"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textColor="@android:color/white"
                      android:textSize="22dp"
                      android:text="TEAM A"
                      android:layout_margin="5dp"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/txt_team_a_score"
                      android:textColor="@android:color/white"
                      android:textSize="22dp"
                      android:text="30"
                      android:layout_marginBottom="5dp"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>

            <ImageView
                    android:src="@drawable/medal"
                    android:id="@+id/img_team_a_medal"
                    android:layout_width="50dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:background="@color/team_b"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textColor="@android:color/white"
                      android:textSize="22dp"
                      android:text="TEAM B"
                      android:layout_margin="5dp"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="@android:color/white"
                      android:textSize="22dp"
                      android:text="30"
                      android:id="@+id/txt_team_b_score"
                      android:layout_marginBottom="5dp"
                      android:layout_gravity="center"
                      android:textStyle="bold"
                      android:layout_height="wrap_content"/>
            <ImageView
                    android:src="@drawable/medal"
                    android:id="@+id/img_team_b_medal"
                    android:layout_width="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_height="50dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <Button android:layout_width="wrap_content"
                android:text="1 VS 1"
                android:layout_weight="1"
                android:id="@+id/btn_versus"
                android:layout_margin="5dp"
                android:background="@drawable/circleuc"
                android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content"
                android:text="MARATON"
                android:background="@drawable/circleuc"
                android:layout_weight="1"
                android:id="@+id/btn_maraton"
                android:layout_margin="5dp"

                android:layout_height="wrap_content"/>
        <Button android:layout_width="wrap_content"
                android:text="ANA MENÃœ"
                android:layout_margin="5dp"
                android:background="@drawable/circleuc"
                android:layout_weight="1"
                android:id="@+id/btn_menu"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>