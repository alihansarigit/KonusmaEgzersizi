<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activitys.MaratonActivity">

    <include layout="@layout/mytoolbar"></include>

    <TextView android:layout_width="50dp"
              android:text="10"
              android:id="@+id/txt_timer"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_marginTop="50dp"
              android:layout_marginBottom="50dp"
              android:textColor="@android:color/white"
              android:background="@drawable/circle_timer"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:text="KARŞILAŞMAK"
              android:id="@+id/txtWords"
              android:gravity="center"
              android:layout_gravity="center"
              android:layout_marginBottom="50dp"
              android:textColor="@android:color/black"
              android:padding="10dp"
              android:textSize="22dp"
              android:background="@drawable/circleuc"
              android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center"
                  android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:layout_height="wrap_content">

            <TextView android:layout_width="wrap_content"
                      android:text="PASS"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"

                      android:textColor="@android:color/white"
                      android:padding="10dp"
                      android:id="@+id/btnimg_pass"

                      android:background="@drawable/circle_pass"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:text="0"
                      android:textSize="12dp"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:id="@+id/txt_passCounter"
                      android:textColor="@android:color/white"
                      android:background="@drawable/circle_pass"
                      android:layout_height="30dp"/>


        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_margin="10dp"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="wrap_content"
                      android:textColor="@android:color/white"
                      android:text="PASS"
                      android:gravity="center"
                      android:layout_margin="10dp"
                       android:id="@+id/btnimg_granted"
                      android:src="@drawable/ic_check_white_24dp"
                      android:background="@drawable/circle_tick"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                      android:textColor="@android:color/white"
                      android:gravity="center"
                      android:text="0"
                      android:id="@+id/txt_correctCounter"
                      android:layout_gravity="center"
                      android:background="@drawable/circle_tick"
                      android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/banner" />
</LinearLayout>